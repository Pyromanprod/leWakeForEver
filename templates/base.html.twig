                        <a class="nav-link {{ route == 'home' ? 'active' }}" aria-current="page"
                           href="{{ path('home') }}"><i class="fas fa-user-plus me-2"></i>Inscription</a>
                    </li>
                    {# BOUTON #}
                    <li class="nav-item">
                        <a class="nav-link {{ route == 'home' ? 'active' }}" aria-current="page"
                           href="{{ path('home') }}"><i class="fas fa-user me-2"></i>Connexion</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>


</header>


{% block body %}{% endblock %}



{# BOOTSTRAP JS #}
<script src="{{ asset('js/bootstrap/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
